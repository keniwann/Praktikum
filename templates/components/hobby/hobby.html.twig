{% block style %}
    <style>
        .hobby {
            background-color:rgb(var(--color-primary-darker));
            padding: 80px;

        }

        .hobby-element{  
            max-width: 1024px;
            display: grid;
            grid-template-columns: 60% auto;
            grid-gap: 30px;

        }
        .hobby-cards{
            display: grid;
            grid-gap: 30px;
            width: 100%;
            grid-template-columns: repeat( 2, 50%);



        }

        .hobby-text {
            width: auto;
            padding: 32px;

        }

        @media screen and (max-width: 1020px) {
            .hobby-element {
                display: flex;
                flex-direction: column;
               
                

            }
        }

        @media screen and (max-width: 650px){
            .hobby {
                min-height: max-content !important;
                padding: 16px;

            }
            .hobby-cards {
                grid-template-column: repeat(1, 100%);

            }

            .hobby-text {
                padding: 0, 16px;

            }
        }
    </style>
{% endblock %}

{% block body %}
    {% set hobbies = [
        {'headline': 'Freizeit',
        'content': 'In meiner Freizeit verbringe ich viel Zeit draußen, da ich jeden Tag ins Fitnessstudio oder laufen gehe. Außerdem verbringe ich viel Zeit mit meinen Freunden.',
        'icon': 'svg/Freetime.svg'},
        {'headline': 'Hobbys',
        'content': 'Ich spiele und gucke sehr gerne Sport. Sei es Fußball, Handball, etc. Zudem rüste ich stets meinen PC auf und verbringe viel Zeit damit.',
        'icon': 'svg/Hobby.svg'},
        {'headline': 'Reisen',
        'content': 'Ich reise gerne und möchte in Zukunft viele Länder besuchen. Dafür lerne ich verschiedene Sprachen, um mich vor Ort besser verständigen zu können.',
        'icon': 'svg/Reisen.svg'},
        {'headline': 'Programmieren',
        'content': 'In der Schule, sowie auch in meiner Freizeit, programmiere ich mit meinen Freunden.',
        'icon': 'svg/3D-Drucker.svg'},

    ] %}

    <section id="hobby" class="hobby">
        <div class="hobby-element">
            <span class="hobby-cards">
                {% for item in hobbies %}
                    {% include 'components/card.html.twig' with item %}
                {% endfor %}
            </span>
            <span class="hobby-text">
                <h2> Interessen</h2>
                <p class="light-color-primary-normal"><br/><br/>Ich heiße Keno Wannke, bin 17 Jahre alt und besuche derzeit das Evangelische Gymnasium in Werther.<br/> <br/>Ich interessiere mich für Sport und Technik. Zudem reise ich gerne.<br/><br/>In der Schule belege ich die Leistungskurse Englisch und Physik. Zudem besuche ich die Grundkurse Informatik und Spanisch, welche mir viel Freude bereiten.
                </p>
            </span>
        </div>
    </section>
{% endblock %}
